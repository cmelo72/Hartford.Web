@section footerscript
{
    <script src="@Url.Content("~/widget/lib/jquery.ui.core.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/widget/lib/jquery.ui.widget.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/widget/lib/jquery.ui.rlightbox.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        jQuery(function ($) {
            var $chosenSheet,
		$stylesheets = $("a[id^=theme-]");

            // theme switcher
            $stylesheets.click(
		function () {
		    $chosenSheet = $(this).attr("href");
		    $("#theme").attr("href", $chosenSheet);

		    // mark this A as an active
		    $stylesheets.removeClass("active");
		    $(this).addClass("active");
		    return false;
		}
	    );

            // run rlightbox
            $(".lb").rlightbox();
            $(".lb_title-overwritten").rlightbox({ overwriteTitle: true });
        });
    </script>    

}

@section css
{

    <link href="@Url.Content("~/widget/css/ui-lightness/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/widget/css/lightbox.min.css")" rel="stylesheet" type="text/css" />

}
